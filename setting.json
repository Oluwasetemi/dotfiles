{
    "breadcrumbs.enabled": true,

    /**
    //--------------------------------------------------
    // ** EDITOR **
    //--------------------------------------------------
    */

    "editor.fontFamily": "'Operator Mono Light','Dank Mono', 'fira code light', monaco, Monoid, Hermit Light, Consolas",
    // "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.fontSize": 12,
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.cursorBlinking": "solid",
    "editor.colorDecorators": true,
    // "editor.parameterHints.enabled": false,
    "editor.fontWeight": "100",
    "editor.lineHeight": 17.65,
    "editor.glyphMargin": true,
    "editor.letterSpacing": 0.3,
    "editor.renderWhitespace": "none",
    "editor.rulers": [80, 100, 120],
    "editor.minimap.enabled": true,
    "editor.formatOnSave": true,
    "editor.gotoLocation.multiple": "goto",
    "editor.renderControlCharacters": false,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.renderIndentGuides": true,
    "editor.suggestSelection": "first",
    "diffEditor.renderSideBySide": true,
    // tell the ESLint plugin to run on save
    "editor.snippetSuggestions": "top",
    "editor.fontLigatures": true,
    "editor.tabCompletion": "on",
    "editor.lineNumbers": "on",
    // The number of spaces a tab is equal to. This setting is overridden
    // based on the file contents when `editor.detectIndentation` is true.
    "editor.tabSize": 4,

    // Insert spaces when pressing Tab. This setting is overriden
    // based on the file contents when `editor.detectIndentation` is true.
    "editor.insertSpaces": true,

    // When opening a file, `editor.tabSize` and `editor.insertSpaces`
    // will be detected based on the file contents. Set to false to keep
    // the values you've explicitly set, above.
    "editor.detectIndentation": false,

    /**
    //--------------------------------------------------
    // ** EDITOR COLOR **
    //--------------------------------------------------
    */
    "editor.tokenColorCustomizations": {},

    // turn it off for JS and JSX, we will do this via eslint
    "[javascript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },

    /**
    //--------------------------------------------------
    // ** ESLINT **
    //--------------------------------------------------
    */

    "eslint.run": "onSave",
    "eslint.autoFixOnSave": true,
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // "eslint.options": {
    //     "env": {
    //         "browser": true,
    //         "jest/globals": true,
    //         "es6": true
    //     },
    //     "parserOptions": {
    //         "ecmaVersion": 2018,
    //         "sourceType": "module",
    //         "ecmaFeatures": {
    //             "jsx": true
    //         }
    //     },
    //     "rules": {
    //         "no-debugger": "off"
    //     }
    // },

    /**
    //--------------------------------------------------
    // ** EMMET **
    //--------------------------------------------------
    */
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "markdown": "html",
        "vue-html": "html",
        "markdownreact": "html"
    },
    "emmet.excludeLanguages": [],

    /**
    //--------------------------------------------------
    // ** FILES **
    //--------------------------------------------------
    */
    "files.exclude": {
        "USE_GITIGNORE": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.next": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.autoSave": "onFocusChange",
    "files.associations": {
        "*.ejs": "html",
        "*.jsx": "javascriptreact",
        "*.md": "mdx",
        ".lintstagedrc": "json"
    },

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.eol": "\n",

    /**
    //--------------------------------------------------
    // ** HTML **
    //--------------------------------------------------
    */
    "html.format.indentInnerHtml": true,
    "html.format.enable": true,
    "html.format.preserveNewLines": true,
    /**
    //--------------------------------------------------
    // ** WORKBENCH **
    //--------------------------------------------------
    */
    "workbench.editor.showTabs": true,
    // this lets you quickly open multiple items in a row and not have the previous ones closed on you
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.tabCloseButton": "right",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.sideBar.location": "right",
    "workbench.settings.editor": "json",
    "workbench.tips.enabled": false,
    // "workbench.dailogs.useSimplified": true,

    /**
    //--------------------------------------------------
    // ** WORKBENCH COLOR **
    //--------------------------------------------------
    */
    "workbench.colorCustomizations": {
        "terminal.foreground": "#FAD000",
        "editorLineNumber.foreground": "#FAD000",
        "editorLineNumber.activeForeground": "#7700ff",
        "menu.separatorBackground": "#c25a63",
        "inputValidation.infoForeground": "#00ff00",
        "inputValidation.warningForeground": "#ffd500",
        "inputValidation.errorForeground": "#ff0000",
        "editor.snippetTabstopHighlightBackground": "#369",
        "editor.snippetTabstopHighlightBorder": "#583399",
        "editor.snippetFinalTabstopHighlightBackground": "#3d9933",
        "editor.snippetFinalTabstopHighlightBorder": "#5c12db"
        // "activityBar.inactiveForeground": "#000",
        // "tab.inactiveBackground": "#f7d958",
        // "tab.inactiveForeground": "#d64b0a"
    },

    /**
    //--------------------------------------------------
    // ** WINDOW **
    //--------------------------------------------------
    */
    "window.newWindowDimensions": "inherit",
    "window.zoomLevel": 0,
    "window.menuBarVisibility": "visible",
    "window.titleBarStyle": "custom",

    /**
    //--------------------------------------------------
    // ** PRETTIER **
    //--------------------------------------------------
    */
    // "prettier.eslint": true,
    // "prettier.bracketSpacing": true,
    // "prettier.trailingComma": "all",
    // "prettier.singleQuote": true,
    "prettier.bracketSpacing": true,
    "prettier.printWidth": 80,
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    "prettier.jsxBracketSameLine": false,
    "prettier.semi": false,
    "prettier.useTabs": false,
    "prettier.proseWrap": "always",
    // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
    "prettier.disableLanguages": ["javascript", "javascriptreact"],
    // show snippets before any other auto completion

    /**
    //--------------------------------------------------
    // ** EXPLORER **
    //--------------------------------------------------
    */
    "explorer.openEditors.visible": 0,

    /**
    //--------------------------------------------------
    // ** CSS **
    //--------------------------------------------------
    */
    "css.lint.zeroUnits": "error",

    /**
    //--------------------------------------------------
    // ** JAVASCRIPT **
    //--------------------------------------------------
    */
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": false,
    "javascript.validate.enable": false,

    /**
    //--------------------------------------------------
    // ** TERMINAL **
    //--------------------------------------------------
    */
    "terminal.integrated.fontFamily": "'Dank Mono', monaco, 'Anonymous Pro', monoid,'Envy Code R', monospace",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.rendererType": "canvas",
    "terminal.integrated.enableBell": true,
    "terminal.integrated.fontWeightBold": "100",
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.fontWeight": "100",
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.shellArgs.osx": ["-l"],

    /**
    //--------------------------------------------------
    // ** MARKDOWN **
    //--------------------------------------------------
    */
    "markdown.preview.fontFamily": " 'Ubuntu', 'Segoe WPC', 'Segoe UI', 'HelveticaNeue-Light' , 'Droid Sans', sans-serif",
    "markdown.preview.fontSize": 12,
    "[markdown]": {
        "editor.codeLens": true,
        "editor.wordWrap": "on",
        "editor.autoIndent": true,
        "editor.fontLigatures": true,
        "editor.quickSuggestions": true,
        "editor.emptySelectionClipboard": false
    },
    "markdownlint.config": {
        "no-empty-links": false,
        "code": true,
        "fenced-code-language": true,
        "language": true,
        "no-duplicate-header": true,
        "atx": true
    },

    /**
    //--------------------------------------------------
    // ** DEBUG **
    //--------------------------------------------------
    */
    "debug.node.autoAttach": "on",
    "debug.toolBarLocation": "floating",
    "debug.openDebug": "openOnSessionStart",
    "debug.openExplorerOnEnd": false,
    "debug.showInStatusBar": "always",
    /**
