// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "VSCode Icons (Light)",
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Vercel Dark"
  },
  "tab_size": 2,
  "preferred_line_length": 80,
  "ui_font_size": 26,
  "buffer_font_size": 26.0,
  "buffer_font_family": "Operator Mono",
  "ui_font_family": "Geist Mono",
  "buffer_font_weight": 300,
  "soft_wrap": "editor_width",
  "preview_tabs": {
    "enabled": false
  },
  "terminal": {
    "font_family": "Monaspace Krypton Var",
    "font_size": 16,
    "blinking": "off",
    "working_directory": "current_project_directory",
    "dock": "bottom"
  },
  "projects_online_by_default": true,
  "hover_popover_enabled": true,
  "features": {
    "edit_prediction_provider": "none"
  },
  "auto_install_extensions": {
    "html": true,
    "astro": true,
    "atomize": true,
    "emmet": true,
    "env": true,
    "jsonnet": true,
    "solidity": true,
    "toml": true
  },
  "use_autoclose": true,
  "format_on_save": "on",
  "formatter": [
    {
      "language_server": {
        "name": "eslint"
      }
    },
    {
      "external": {
        "command": "prettier",
        "arguments": [
          "--config",
          // "/Users/niksmac/.prettierrc",
          "--stdin-filepath",
          "{buffer_path}"
        ]
      }
    }
  ],
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "journal": {
    "path": "~",
    "hour_format": "hour12"
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  // "inlay_hints": {
  //   "enabled": true,
  //   "typeHints": true,
  //   "parameterHints": true,
  //   "chainingHints": true
  // },
  "linter": "eslins",
  "bracket_pairing": "always",
  "eslint": {
    "enabled": true,
    "autoFixOnSave": true,
    "autoFixOnFormat": true,
    "autoFixOnFormatDelay": 1500
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "endOfLine": "lf"
  },
  "language": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "format_on_save": "on"
    },
    "TypeScriptReact": {
      "format_on_save": "on"
    },
    "JavaScriptReact": {
      "format_on_save": "on"
    },
    "Python": {
      "format_on_save": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      }
    }
  },
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayVariableTypeHintsWhenTypeMatchesName": false,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    }
  },
  "language_models": {
    "openai": {
      "version": "1"
    }
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    // "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output"
    // "**/node_modules"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "chat_panel": {
    "button": "always"
  },
  "notification_panel": {
    "button": false
  },
  "jupyter": {
    "kernel_selections": {
      "python": "conda-env",
      "typescript": "deno",
      "javascript": "deno"
    }
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "file_icons": true,
    "dock": "left",
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "indent_guides": {
      "show": "always"
    }
  }
}
